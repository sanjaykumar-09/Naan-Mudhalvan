# Simple chatbot using if-else logic

def chatbot():
    print("Hello! I'm ChatBot. Type 'bye' to exit.")
    
    while True:
        user_input = input("You: ").lower()
        
        if user_input == "bye":
            print("ChatBot: Goodbye! Have a great day.")
            break
        elif "hello" in user_input or "hi" in user_input:
            print("ChatBot: Hello there!")
        elif "how are you" in user_input:
            print("ChatBot: I'm just a bunch of code, but I'm doing great!")
        elif "your name" in user_input:
            print("ChatBot: I'm ChatBot 1.0.")
        elif "help" in user_input:
            print("ChatBot: I can answer simple questions like greetings or tell you my name.")
        else:
            print("ChatBot: I'm not sure how to respond to that.")

if _name_ == "_main_":
    chatbot()
